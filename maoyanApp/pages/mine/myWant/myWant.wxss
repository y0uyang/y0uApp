/* pages/mine/myWant/myWant.wxss */
page{
  background-color: #f5f5f5;
}
.totalMovieNum{
  color: #999999;
  font-size: 24rpx;
  padding: 40rpx 34rpx;
}
.movieCls{
  background-color: #fff;
  display: flex;
  padding: 40rpx;
  border-bottom: 1rpx solid #ccc;
}
.movieCls>image{
  width: 156rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.movieInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.movieInfo text{
  color: #737373;
  font-size: 30rpx;
  margin: 0 6rpx;
}
.movieInfo>text:nth-of-type(1){
  color: #000;
  font-size: 40rpx;
}

.scoreCls{
  color: #ffb400;
}
.scoreCls>text:nth-of-type(1){
  font-size: 32rpx;
}
.scoreCls>text:nth-of-type(2){
  font-size: 26rpx;
}