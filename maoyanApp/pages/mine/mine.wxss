page{
  background-color: #f5f5f5;
}
.items{
  margin-top: 30rpx;
  background-color: #fff;
  border-bottom: 1rpx #dcdcdc solid;
  border-top: 1rpx #dcdcdc solid;
}
.item {
  padding: 34rpx 34rpx 34rpx 4rpx;
  margin-left: 34rpx;
  border-bottom: 1rpx #dcdcdc solid;
  display: flex;
  align-items: center;
}
.item:nth-last-child(1){
  border: none;
}
.item text{
  font-size: 30rpx;
  flex-grow: 1;
  font-family: SimHei;
}
.item image{
  width: 40rpx;
  height: 28rpx;
}

.bottomText{
  position: absolute;
  bottom: 30rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  font-size: 24rpx;
}
.bottomText>text:nth-of-type(1){
  color: #999999;
}
.bottomText>text:nth-of-type(2){
  color: #faca71;
  text-decoration: underline;
}