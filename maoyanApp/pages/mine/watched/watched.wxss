/* pages/mine/watched/watched.wxss */

page{
  background-color: #f5f5f5;
}
.totalMovieNum{
  color: #999999;
  font-size: 24rpx;
  padding: 40rpx 34rpx;
}
.bigOneCls{
  background-color: #fff;
  margin-top: 10rpx;
}
.movieCls{
  background-color: #fff;
  display: flex;
  padding:40rpx 40rpx 40rpx 0;
  margin-left: 40rpx;
  border-bottom: 1rpx solid #dcdcdc;
}
.movieCls>image{
  width: 156rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.movieInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.movieInfo>text{
  color: #000;
  font-size: 40rpx;
}
.myDis{
  flex-grow: 1;
  display: flex;
  align-items: center;
  
}
.myDis>text{
  color: #ffc600;
  font-size: 34rpx;
}
.myDis>text:nth-last-of-type(1){
  margin-left: 10rpx;
}
.starCls{
  display: flex;
  align-items: flex-end;
}
.starCls>image{
  width: 34rpx;
  height: 34rpx;
}