.sessionDateCls{
  display: flex;
}
.sessionDateCls>text{
  display: inline-block;
  font-size: 30rpx;
  padding: 30rpx 26rpx;
}
.ischeckedDate{
  border-bottom: 4rpx solid #ef4238;
  color: #ef4238
}




.theatreCls{
  display: flex;
  align-items: center;
  margin-left: 20rpx;
  padding: 40rpx 20rpx 50rpx 0;
  border-bottom: #dcdcdc solid 1rpx;
}
.theInfoCls{
  display: flex;
  flex-direction: column;
  flex-grow: 1;
  width:300rpx;
}
.itemName{
  font-size: 38rpx;
  font-family: SimHei;
  margin: 0 20rpx 0 0 ;
}
.theInfoCls>view:nth-of-type(1) text:nth-of-type(n+2){
  color:#dd403b;
  font-size: 34rpx;
}
.theInfoCls>view:nth-of-type(1) text:nth-of-type(3){
  font-size: 24rpx;
}
.theInfoCls>text{
  color: #666666;
  font-size: 32rpx;
  overflow: hidden;  
  white-space: nowrap;  
  text-overflow:ellipsis; 
  margin: 24rpx 0 20rpx;
}
.rangeCls{
  margin-left: 40rpx;
  color:#999999;
  font-size: 30rpx;
}




/* 小吃 */
.service{
  font-size: 24rpx;
  border-radius: 5rpx;
  padding: 6rpx 8rpx;
  margin-right: 10rpx;
}
.eat{
  color:#ff9900;
  border: 1rpx #ff9900 solid;
}
.normal{
  color:#589daf;
  border: 1rpx #589daf solid;
}