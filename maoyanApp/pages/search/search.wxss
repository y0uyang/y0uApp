/* pages/search/search.wxss */
page{
  background-color: #f5f5f5;
}
.searchInput{
  display: flex;
  margin: 30rpx;
  position: relative;
  align-items: center;
}
.searchInput image{
  width: 30rpx;
  height:30rpx;
  position: absolute;
  top:15rpx;
  left:14rpx;
  z-index: 3;
}
.searchInput input{
  background-color: #fff;
  border-radius: 8rpx;
  flex-grow: 1;
  height:30rpx;
  padding: 4rpx 0;
  padding-left: 60rpx;
  font-size: 28rpx;
}
.searchInput text{
  color:#dd403b;
  margin-left:  20rpx;
  font-size: 30rpx;
}

.searchText{
  display: flex;
  flex-direction: column;
  background-color: #fff;
  padding: 30rpx 18rpx;
}

.hotSearch{
  display: flex;
  flex-wrap: wrap;
  margin-top: 14rpx;
  font-size: 28rpx;
}
.hotSearch text{
  display: inline-block;
  background-color: #f5f5f5;
  border-radius: 10rpx;
  padding: 10rpx 16rpx;
  margin: 6px;
  font-size: 24rpx;
}



.movieCls{
  background-color: #fff;
  display: flex;
  padding: 40rpx;
}
.movieCls>image{
  width: 156rpx;
  height: 220rpx;
  margin-right: 20rpx;
}
.movieInfo{
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  flex-grow: 1;
}
.movieInfo text{
  color: #737373;
  font-size: 32rpx;
  margin: 0 6rpx;
}
.movieInfo>text:nth-of-type(1){
  color: #000;
  font-size: 40rpx;
}

.scoreCls{
  color: #ffb400;
}
.scoreCls>text:nth-of-type(1){
  font-size: 32rpx;
}
.scoreCls>text:nth-of-type(2){
  font-size: 26rpx;
}