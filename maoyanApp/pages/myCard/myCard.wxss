/* pages/myCard/myCard.wxss */
page{
  background-color: #f5f5f5;
}
.mycardCls{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.mycardCls>image{
  width: 240rpx;
  height: 280rpx;
  margin-top: 300rpx;
}
.mycardCls>text:nth-of-type(1){
  display: inline-block;
  font-family: SimHei;
  font-size: 36rpx;
  margin: 40rpx 0;
}
.mycardCls>text:nth-of-type(2){
  color: #ef4238;
  border: 2rpx solid #ef4238;
  border-radius: 10rpx;
  font-size: 42rpx;
  padding: 18rpx 30rpx;
}